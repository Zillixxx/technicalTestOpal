generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Internship {
  id         Int      @id @default(autoincrement())
  nom        String
  prenom     String
  email      String
  service    String
  dateDebut  DateTime
  dateFin    DateTime
  motivation String?
  status     String   @default("pending")
  createdAt  DateTime @default(now())
  updatedAt  DateTime?
}